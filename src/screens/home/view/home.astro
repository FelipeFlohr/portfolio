---
import HomeLayout from '../../../shared/home_layout/view/HomeLayout.astro';
import type DefaultProps from '../../../types/DefaultProps';
import FadeBackground from '../components/fade_background/FadeBackground.svelte';
import Header from '../components/header/Header.svelte';
import Navigation from '../components/navigation/Navigation.svelte';

export interface Props extends DefaultProps {}

const { title, pathToShow, localization } = Astro.props;
---

<HomeLayout localization={localization} pathToShow={pathToShow} title={title}>
    <FadeBackground>
        <div class="w-full h-full flex flex-col justify-center items-center">
            <header class="flex flex-col justify-center items-center my-8">
                <Header localization={localization} />
            </header>
            <Navigation client:visible localization={localization} />
        </div>
    </FadeBackground>
</HomeLayout>