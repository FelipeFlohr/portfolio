---
import type Localization from "../../../localization/Localization";
import GridDistribution from "../components/grid_distribution/GridDistribution.svelte";
import HtmlStructure from "../components/html_structure/HtmlStructure.astro";

export interface Props {
	readonly title: string;
    readonly pathToShow: string;
    readonly localization: Localization;
}

const { title, pathToShow, localization } = Astro.props;
---

<HtmlStructure title={title}>
    <GridDistribution client:visible localization={localization} pathToShow={pathToShow}>
        <h1>Content</h1>
    </GridDistribution>
</HtmlStructure>